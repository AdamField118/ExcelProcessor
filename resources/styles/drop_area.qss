FileDropArea {
    border: 2px dashed #aaa;
    border-radius: 10px;
    background-color: #f9f9f9;
    padding: 10px;
}

FileDropArea:hover {
    border-color: #2196F3;
    background-color: #e3f2fd;
}

FileDropArea QLabel {
    color: #555;
}

FileDropArea QPushButton {
    background-color: #2196F3;
    color: white;
    border: none;
    padding: 8px 16px;
    border-radius: 4px;
}

FileDropArea QPushButton:hover {
    background-color: #1976D2;
}